/* common */
page {background-color: #f5f5f5;}

/* add */
.add {background-color: #FFF;padding: 0 30rpx;margin-bottom: 20rpx;}
.add:first-child {border-top: 1px solid #EEE;}
.add-group {border-bottom: 1px solid #EEEEEE;color: #EEE;padding: 10rpx 100rpx 10rpx 0;position: relative;font-size: 28rpx;color: #999;}
.add-group.icon:after {content: '';display: block;border-top: 1px solid #999;border-right: 1px solid #999;position: absolute;right: 10rpx;top: 50%;margin-top: -7rpx;height: 14rpx;width: 14rpx;transform: rotate(45deg);}
.add-group label {position: absolute;display: inline-block;line-height: 70rpx;top: 10rpx;right: 38rpx;}
.add-group input {height: 70rpx;color: #2d2d2d;}
.add-group text {height: 70rpx;line-height: 70rpx;display: block;}
.add-group .gray {font-size: 28rpx;color: #999;}
.add-group.textarea {padding: 16rpx 0;border: none;}
.add-group textarea {width: 100%;color: #2d2d2d;line-height: 40rpx;height: 120rpx;}
.add-cell {display: flex;justify-content: space-between;padding: 10rpx 0;height: 70rpx;align-items: center;}
.add-cell label {font-size: 28rpx;color: #999;}