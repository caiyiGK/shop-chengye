/** common **/
page {position: fixed;top: 0;left: 0;width: 100%;height: 100%;overflow: hidden;background-color: #f5f5f5;}
.cart {padding-bottom: 100rpx;box-sizing: border-box;display: flex;flex-direction: column;height: 100%;width: 100%;}

/* hd */
.hd {padding: 20rpx 30rpx 50rpx;}
.hd-text {font-size: 36rpx;color: #2d2d2d;height: 50rpx;line-height: 50rpx;}
.hd-text text {float: right;font-size: 28rpx;}
.hd-count {font-size: 28rpx;color: #2d2d2d;}

/* products */
.products {flex: 1;overflow: hidden;}
.products-scroll {height: 100%;}
.products-con {background-color: #FFF;border-radius: 8rpx;padding: 20rpx;margin: 0 30rpx;}
.products-item {padding: 20rpx 0;}
.products-round {display: block;width: 32rpx;height: 32rpx;border-radius: 50%;border: 1px solid #e5e5e5;position: absolute;left: 0;top: 50%;margin-top: -16rpx;}
.products-item {position: relative;padding-left: 236rpx;}
.products-pic {width: 164rpx;height: 164rpx;position: absolute;left: 54rpx;top: 20rpx;background-color: #f5f5f5;border-radius: 8rpx;} 
.products-info {display: flex;flex-direction: column;}
.products-info .title {font-size: 24rpx;color: #2d2d2d;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;overflow: hidden;font-weight: 500;}
.products-info .spec {font-size: 22rpx;margin: 10rpx 0;}
.products-info .spec text {margin-right: 10rpx;display: inline-block;background-color: #f5f5f5;padding: 0 10rpx;color: #c8c8c8;}
.products-param {display: flex;justify-content: space-between;}
.products-param .price {font-size: 28rpx;color: #DA2027;}
.products-control {display: flex;width: 170rpx;border: 1px solid #e5e5e5;border-radius: 8rpx;height: 40rpx;align-items: center;}
.products-control label {width: 50rpx;color: #999;font-size: 22rpx;display: inline-flex;justify-content: center;align-items: center;}
.products-control input {width: 70rpx;border-left: 1px solid #e5e5e5;border-right: 1px solid #e5e5e5;min-height: 40rpx;height: 40rpx;line-height: 40rpx;text-align: center;font-size: 22rpx;}

/* control */
.control {position: fixed;bottom: 0;left: 0;width: 100%;box-sizing: border-box;padding: 0 20rpx;display: flex;justify-content: space-between;height: 100rpx;background: #FFF;
box-shadow: -4px -4px 8px -4px rgba(0,0,0,0.15);align-items: center;}
.control-all {font-size: 24rpx;color: #999;display: flex;margin-left: 20rpx;}
.control-round {display: block;width: 32rpx;height: 32rpx;border-radius: 50%;border: 1px solid #e5e5e5;margin-right: 10rpx;}
.control-sub {display: flex;font-size: 24rpx;color: #999;align-items: center;display: none;}
.control-sub.active {display: flex;}
.control-sub .price {color: #DA2027;font-size: 32rpx;}
.control-sub .price label {font-size: 24rpx;}
.control-sub .sub {min-width: 172rpx;height: 72rpx;color: #FFF;font-size: 28rpx;background-color: #DA2027;border-radius: 8rpx;margin-left: 20rpx;display: inline-flex;justify-content: center;align-items: center;}
.control-sub .btn {display: inline-block;border: 1px solid #DA2027;color: #DA2027;padding: 0 30rpx;height: 50rpx;border-radius: 48rpx;display: flex;align-items: center;margin-left: 20rpx;}
.control-sub .btn.orange {color: #FE968F;border-color: #FE968F;}
