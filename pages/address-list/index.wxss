/* common */
page {background-color: #f5f5f5;}

/* add */
.list {margin-bottom: 80rpx;border-top: 1px solid #EEE;}
.list-item {margin-bottom: 20rpx;background-color: #FFF;padding: 30rpx 30rpx 20rpx;position: relative;}
.list-del {position: absolute;width: 34rpx;height: 34rpx;background-color: #e5e5e5;position: absolute;top: 20rpx;right: 30rpx;}
.list-user {font-size: 28rpx;color: #2d2d2d;height: 50rpx;display: flex;align-items: center;}
.list-user text {margin-right: 20rpx;}
.list-info {font-size: 28rpx;color: #2d2d2d;line-height: 50rpx;}
.list-set {display: flex;justify-content: space-between;font-size: 28rpx;color: #999;margin-top: 20rpx;padding: 20rpx 0 10rpx;border-top: 1px solid #EEEEEE;}
.list-set label.active {color: #2d2d2d;}
.list-edit {color: #999;} 