/* common */
.detail {padding-bottom: 100rpx;background-color: #f5f5f5;}

/* tab */
.tab {display: flex;border-top: 1px solid #ededed;border-bottom: 1px solid #f9f9f9;padding: 0 30rpx;margin-bottom: 30rpx;}
.tab-item {flex: 1;margin: 0 15rpx;height: 80rpx;display: inline-flex;justify-content: center;align-items: center;color: #2D2D2D;font-size: 28rpx;border-bottom: 4rpx solid #FFF;}
.tab-item.active {border-color: #DA2027;}

/* banner */
.banner {height: 730rpx;width: 750rpx;}
.banner-item {height: 730rpx!important;width: 750rpx!important;}
.banner-link {height: 730rpx;width: 750rpx;display: block;background-color: #e5e5e5;}

/* comment */
.comment {background-color: #FFF;}
.comment-hd {display: flex;font-size: 28rpx;color: #2d2d2d;height: 60rpx;justify-content: space-between;align-items: center;padding: 20rpx 20rpx 0 20rpx;}
.comment-link {font-size: 28rpx;color: #DA2027;}
.comment-con {padding: 0 20rpx 30rpx 20rpx;}
.comment-user {display: flex;align-items: center;height: 50rpx;}
.comment-pic {height: 32rpx;width: 32rpx;border-radius: 50%;background-color: #e5e5e5;margin-right: 8rpx;}
.comment-name {font-size: 24rpx;color: #999;}
.comment-text {font-size: 24rpx;color: #2D2D2D;}

/* content */
.content-hd {height: 100rpx;line-height: 100rpx;text-align: center;}
.content-hd text {font-size: 32rpx;color: #999999;line-height: 44rpx;position: relative;padding: 0 80rpx;display: inline-block;}
.content-hd text:before,
.content-hd text:after {position: absolute;content: '';display: block;width: 70rpx;height: 4rpx;background-color: #999999;top: 50%;margin-top: -2rpx;}
.content-hd text:before {left: 0;}
.content-hd text:after {right: 0;}

/* control */
.control {position: fixed;bottom: 0;left: 0;width: 100%;height: 100rpx;display: flex;justify-content: space-between;padding-right: 20rpx;background-color: #FFF;box-shadow: -4px -4px 8px -4px rgba(0,0,0,0.15);box-sizing: border-box;}
.control-link {display: inline-flex;}
.control-link avigator {display: inline-flex;flex-direction: column;flex: 1;align-items: center;justify-content: center;margin: 0 26rpx;}
.control-ipic {width: 40rpx;height: 40rpx;background-color: #e5e5e5;margin-bottom: 4rpx;}
.control-itext {font-size: 22rpx;color: #2D2D2D;}
.control-btn {display: flex;align-items: center;}
.control-btn view {width: 216rpx;height: 80rpx;display: inline-flex;justify-content: center;align-items: center;color: #FFF;font-size: 22rpx;}
.control-btn-add {background-color: #FC847C;border-radius: 8rpx 0 0 8rpx;}
.control-btn-buy {background-color: #DA2027;border-radius: 0 8rpx 8rpx 0;}