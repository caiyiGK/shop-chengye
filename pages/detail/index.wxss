/* common */
page {position: fixed;top: 0;left: 0;width: 100%;height: 100%;overflow: hidden;}
.detail {margin-top: 80rpx;padding-bottom: 100rpx;background-color: #f5f5f5;height: 100%;box-sizing: border-box;}

/* tab */
.tab {display: flex;border-top: 1px solid #ededed;border-bottom: 1px solid #f9f9f9;padding: 0 30rpx;background-color: #FFF;position: fixed;top: 0;left: 0;width: 100%;z-index: 10;}
.tab-item {flex: 1;margin: 0 15rpx;height: 80rpx;display: inline-flex;justify-content: center;align-items: center;color: #2D2D2D;font-size: 28rpx;border-bottom: 4rpx solid #FFF;}
.tab-item.active {border-color: #DA2027;}

/* banner */
.banner {height: 730rpx;width: 750rpx;padding-top: 30rpx;background-color: #FFF;}
.banner-item {height: 730rpx!important;width: 750rpx!important;}
.banner-link {height: 730rpx;width: 750rpx;display: block;background-color: #e5e5e5;}

/* info */
.info {background-color: #FFF;padding: 20rpx;}
.info-desc {height: 40rpx;line-height: 40rpx;margin-bottom: 10rpx;}
.info-desc text {font-size: 24rpx;color: #999;}
.info-hd {font-size: 32rpx;color: #2d2d2d;line-height: 40rpx;padding-right: 60rpx;font-weight: 500;}
.info-price {padding: 10rpx 0;font-size: 48rpx;color: #DA2027;display: flex;align-items: center;}
.info-price .yen {font-size: 36rpx;margin-right: 4rpx;}
.info-price .info-tag {margin-left: 10rpx;}
.info-tag {font-size: 22rpx;color: rgba(218,32,39,1);display: inline-block;padding: 0 20rpx;background-color: rgba(218,32,39,0.1);border-radius: 16px;line-height: 34rpx;}
.info-price-deline {font-size: 28rpx;color: #999;text-decoration: line-through;}
.info-share {float: right;background-color: #F2F2F2;color: #999;font-size: 22rpx;padding: 0 20rpx 0 40rpx;margin-right: -20rpx;line-height: 34rpx;border-radius: 50rpx 0 0 50rpx;}
.info-count {font-size: 24rpx;color: #999;height: 40rpx;line-height: 40rpx;margin-top: 10rpx;}
.info-count text {float: right;}

/* spec */
.spec {background-color: #FFF;margin-top: 20rpx;padding: 10rpx 20rpx;}
.spec-cell {position: relative;display: flex;padding-right: 40rpx;height: 60rpx;align-items: center;margin-bottom: 10rpx;}
.spec-cell:before {content: '';display: block;border-top: 1px solid #999;border-right: 1px solid #999;position: absolute;right: 10rpx;top: 50%;margin-top: -7rpx;height: 14rpx;width: 16rpx;transform: rotate(45deg);}
.spec-cell label {font-size: 28rpx;color: #999;width: 80rpx;}
.spec-cell text {font-size: 28rpx;color: #2D2D2D;flex: 1;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;}


/* comment */
.comment {background-color: #FFF;margin-top: 20rpx;}
.comment-hd {display: flex;font-size: 28rpx;color: #2d2d2d;height: 60rpx;justify-content: space-between;align-items: center;padding: 20rpx 20rpx 0 20rpx;}
.comment-link {font-size: 28rpx;color: #DA2027;position: relative;padding-right: 40rpx;}
.comment-link:before {content: '';display: block;border-top: 1px solid #DA2027;border-right: 1px solid #DA2027;position: absolute;right: 10rpx;top: 50%;margin-top: -7rpx;height: 14rpx;width: 14rpx;transform: rotate(45deg);}
.comment-con {padding: 0 20rpx 30rpx 20rpx;}
.comment-user {display: flex;align-items: center;height: 50rpx;}
.comment-pic {height: 32rpx;width: 32rpx;border-radius: 50%;background-color: #e5e5e5;margin-right: 8rpx;}
.comment-name {font-size: 24rpx;color: #999;}
.comment-text {font-size: 24rpx;color: #2D2D2D;}

/* content */
.content-hd {height: 100rpx;line-height: 100rpx;text-align: center;}
.content-hd text {font-size: 32rpx;color: #999999;line-height: 44rpx;position: relative;padding: 0 80rpx;display: inline-block;}
.content-hd text:before,
.content-hd text:after {position: absolute;content: '';display: block;width: 70rpx;height: 4rpx;background-color: #999999;top: 50%;margin-top: -2rpx;}
.content-hd text:before {left: 0;}
.content-hd text:after {right: 0;}

/* control */
.control {position: fixed;bottom: 0;left: 0;width: 100%;height: 100rpx;display: flex;justify-content: space-between;padding-right: 20rpx;background-color: #FFF;box-shadow: -4px -4px 8px -4px rgba(0,0,0,0.15);box-sizing: border-box;z-index: 10;}
.control-link {display: inline-flex;}
.control-link avigator {display: inline-flex;flex-direction: column;flex: 1;align-items: center;justify-content: center;margin: 0 26rpx;}
.control-ipic {width: 40rpx;height: 40rpx;background-color: #e5e5e5;margin-bottom: 4rpx;}
.control-itext {font-size: 22rpx;color: #2D2D2D;}
.control-btn {display: flex;align-items: center;}
.control-btn view {width: 216rpx;height: 80rpx;display: inline-flex;justify-content: center;align-items: center;color: #FFF;font-size: 22rpx;}
.control-btn-add {background-color: #FC847C;border-radius: 8rpx 0 0 8rpx;}
.control-btn-buy {background-color: #DA2027;border-radius: 0 8rpx 8rpx 0;}